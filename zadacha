#include <iostream>
#include <cmath>
#include <string>


using namespace std;

double calc(double a, double b, double x)
{
	double chisl = pow(a * x + b, 1.0 / 3.0);
    double znam = log(x) * log(x);
	double y = chisl / znam;
	return y;
}

/*
double calc(double x)

{
	const double a = 1.35;
	const double b = 0.98;
	return calc(a, b, x);
}
*/

void TA(double a, double b, double xn, double xk, double dx)
{
	for (double x = xn; x <= xk; x = x + dx)
	{
		double y = calc(a,b, x);
		cout << "X = " << x << "\t" << "Y = " << y << std::endl;
	}
	return;
}

void TB(double a, double b, double* x, int size) 
{
	for (int i = 0; i < size; i++)
	{
		
		double y = calc(a,b, x[i]);
		char result[50];
		sprintf_s(result, "x = %3.5f y = %.2f \n", x[i], y);
		cout << result << endl;
		
	}
}
int main(int argc, char* argv[])

{   

	cout << "Task A : " << endl;
	TA(1.35, 0.98, 1.14, 4.24, 0.62);
	double x[] = {1,1, 2.4, 3.6, 1.7, 3.9};
	cout << "Task B : " << endl;
	TB(1.35, 0.98, x, (sizeof(x) / sizeof(x[0])));
	return 0;

}






